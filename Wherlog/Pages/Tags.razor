@page "/tags/{slug?}"
@using Wherlog.Helpers
@using Wherlog.Models.Cate
@using Wherlog.Models.Post
@inject NavigationManager Navigation

@if (cate == null)
{
    <PageTitle>Tag</PageTitle>
    <h1>Tag</h1>

    @if (cates != null)
    {
        <FluentStack Orientation="Orientation.Vertical">
            @foreach (var cate in cates)
            {
                <FluentCard @onclick="@(() => OnClick($"tags/{cate.Slug}"))">
                    <h4>@cate.Name</h4>
                </FluentCard>
            }
        </FluentStack>
    }
}
else
{
    <PageTitle>Tag: @cate.Info.Name</PageTitle>
    <h1>Tag: @cate.Info.Name</h1>

    <FluentStack Orientation="Orientation.Vertical">
        @foreach (PostModel post in cate.Posts)
        {
            <PostCard Post="@post" />
        }
    </FluentStack>
}

@code
{
    private RequestHelper request = RequestHelper.Default;
    private CatesModel[] cates;
    private CateDetailModel cate;

    private bool HasSlug => !string.IsNullOrEmpty(Slug);

    [Parameter]
    public string Slug { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (HasSlug)
        {
            cates = null;
            cate = await request.GetCateAsync(CateType.Tag, Slug).GetResults();
        }
        else
        {
            cate = null;
            cates = await request.GetCatesAsync(CateType.Tag).GetResults();
        }
    }

    private void OnClick(string path)
    {
        Navigation.NavigateTo(path);
    }
}
